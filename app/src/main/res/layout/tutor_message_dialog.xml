<!-- res/layout/tutor_message_dialog.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/close_tutor_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_1sdp"
        android:orientation="vertical">

        <Button
            android:id="@+id/close_btn_tutor_message"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/close_btn"/>

        <TextView
            android:id="@+id/tv_tutor_message"
            android:layout_width="@dimen/_225sdp"
            android:layout_height="@dimen/_40sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Thank you for sharing your knowledge!"
            android:textColor="#000000"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

</LinearLayout>