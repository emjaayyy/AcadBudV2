<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_200sdp"
    android:orientation="vertical"
    android:background="@drawable/rectangle">

    <Button
        android:id="@+id/close_btn_identifier"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_240sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/close_btn" />

    <LinearLayout
        android:id="@+id/tv_tutor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_identifier_tutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Please enter the name of the Tutor:"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp" />

        <AutoCompleteTextView
            android:id="@+id/tutor_1"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rectangle"
            android:textColor="@color/color_border" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enter_layout"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_105sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <Button
            android:id="@+id/Enter_tutor"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/colorPrimary"
            android:text="Enter"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorTertiary"/>

    </LinearLayout>


</LinearLayout>