<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#ffffff">


    <View
        android:id="@+id/list_meeting_vw_1_ssg"
        android:layout_width="9dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="#9E96FF" />

    <View
        android:id="@+id/list_meeting_vw_2_ssg"
        android:layout_width="323dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/list_meeting_vw_1_ssg"
        android:layout_alignBottom="@+id/list_meeting_vw_1_ssg"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/list_meeting_vw_1_ssg"
        android:background="#EFEEFF"
        android:fontFamily="@font/poppins"
        android:paddingLeft="1dp"
        android:textColor="#003780"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subject_list"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_meeting_vw_2_ssg"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="154dp"
        android:layout_toEndOf="@+id/list_meeting_vw_1_ssg"
        android:fontFamily="@font/poppins"
        android:text=""
        android:textColor="#003780"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/topic_list"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/subject_list"
        android:layout_alignEnd="@+id/list_meeting_vw_2_ssg"
        android:layout_alignBottom="@+id/subject_list"
        android:layout_marginStart="27dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/participant_number_1_ssg"
        android:fontFamily="@font/poppins"
        android:text=""
        android:textColor="#003780"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/date_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_list"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/list_meeting_vw_1_ssg"
        android:gravity="left"
        android:text=""
        android:textColor="#535353"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/time_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic_list"
        android:layout_alignBottom="@+id/date_list"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/date_list"
        android:gravity="left"
        android:text=""
        android:textColor="#535353"
        android:textSize="15dp" />

    <Button
        android:id="@+id/participanttv_1_ssg"
        android:layout_width="78dp"
        android:layout_height="21dp"
        android:layout_below="@+id/date_list"
        android:layout_alignStart="@+id/date_list"
        android:layout_alignBottom="@+id/list_meeting_vw_2_ssg"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:gravity="left"
        android:text="Participant:"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/participant_number_1_ssg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_list"
        android:layout_alignBottom="@+id/participanttv_1_ssg"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/participanttv_1_ssg"
        android:gravity="center"
        android:text=""
        android:textColor="#535353"
        android:textSize="15dp" />
</RelativeLayout>