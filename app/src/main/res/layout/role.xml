<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup">

    <TextView
        android:id="@+id/choose_role"
        android:layout_width="313dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/poppins"
        android:text="Choose your fighter"
        android:textColor="#ffffff"
        android:textSize="35sp" />

    <Button
        android:id="@+id/student_role"
        android:layout_width="267dp"
        android:layout_height="247dp"
        android:layout_below="@+id/choose_role"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="63dp"
        android:background="@drawable/student_role"
        android:backgroundTint="@null" />

    <Button
        android:id="@+id/SSG_OFFICER"
        android:layout_width="267dp"
        android:layout_height="247dp"
        android:layout_below="@+id/student_role"
        android:layout_alignStart="@+id/student_role"
        android:layout_alignEnd="@+id/student_role"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/ssg_role" />


</RelativeLayout>