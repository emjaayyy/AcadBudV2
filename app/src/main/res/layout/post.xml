<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/AcadBud_post"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="166dp"
        android:fontFamily="@font/poppins"
        android:paddingLeft="13dp"
        android:text="AcadBud"
        android:textColor="#004AAD"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/post_et"
        android:layout_width="383dp"
        android:layout_height="150dp"
        android:hint="Write a post"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingBottom="70dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/AcadBud_post"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rectangle"/>


    <Button
        android:id="@+id/post_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/post_et"
        android:layout_alignEnd="@+id/post_et"
        android:layout_alignBottom="@+id/post_et"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="8dp"
        android:background="#02408B"
        android:text="post" />

</RelativeLayout>