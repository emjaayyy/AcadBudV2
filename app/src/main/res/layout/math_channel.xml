<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <TextView
        android:id="@+id/AcadBud_math_channel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="166dp"
        android:fontFamily="@font/poppins"
        android:paddingLeft="13dp"
        android:text="Math"
        android:textColor="#9E96FF"
        android:textSize="35sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_math"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/AcadBud_math_channel"
        android:layout_above="@+id/math_vw"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/math_channel_post_btn"
        android:layout_width="76dp"
        android:layout_height="80dp"
        android:layout_above="@+id/math_vw"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/post_btn" />

    <View
        android:id="@+id/math_vw"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:background="#DBDEE3"/>

    <Button
        android:id="@+id/home_btn_english"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/math_vw"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/home_button" />

    <Button
        android:id="@+id/meeting_btn_math"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/home_btn_english"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/home_btn_english"
        android:background="@drawable/meeting_button" />

    <Button
        android:id="@+id/notif_btn_math"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/home_btn_english"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/meeting_btn_math"
        android:background="@drawable/notification_button" />

    <Button
        android:id="@+id/profile_btn_math"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/meeting_btn_math"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/notif_btn_math"
        android:background="@drawable/profile_button" />

</RelativeLayout>