<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup">


    <ImageView
        android:id="@+id/LogoIcon_login_ssg"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_122sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/school_logo" />

    <!-- Text View for "AcadBud" -->

    <ImageView
        android:id="@+id/group_login_ssg"
        android:layout_width="@dimen/_255sdp"
        android:layout_height="@dimen/_190sdp"
        android:layout_marginLeft="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_75sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/group" />

    <TextView
        android:id="@+id/AcadBudTxtShadow_login_ssg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_58sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_191sdp"
        android:fontFamily="@font/gatwick"
        android:text="AcadBud"
        android:textColor="#000000"
        android:textSize="@dimen/_40ssp" />

    <TextView
        android:id="@+id/AcadBudTxt_login_ssg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_58sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_191sdp"
        android:fontFamily="@font/gatwick"
        android:text="AcadBud"
        android:textColor="#ffffff"
        android:textSize="@dimen/_40ssp" />

    <TextView
        android:id="@+id/Login_ssg_login"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_65sdp"
        android:text="Login"
        android:fontFamily="@font/poppins"
        android:textColor="#ffffff"
        android:textSize="@dimen/_35ssp"
        android:paddingLeft="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_245sdp"
        android:layout_marginLeft="@dimen/_60sdp"/>

    <ImageView
        android:id="@+id/ssg_icon_login"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_330sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:background="@drawable/ssg_position" />

    <EditText
        android:id="@+id/Input_ssg_login"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_27sdp"
        android:layout_marginTop="@dimen/_340sdp"
        android:layout_marginLeft="@dimen/_75sdp"
        android:background="@drawable/rounded_corner_view"
        android:textColorHint="@color/color_border"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:hint="SSLG Position"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/_10sdp"
        android:theme="@style/Base.Theme.AcadBudV2"
        android:textSize="@dimen/_11ssp" />

    <ImageView
        android:id="@+id/LrnIcon_login_ssg"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_375sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:background="@drawable/lrn_signup" />

    <EditText
        android:id="@+id/Input_Lrn_login_ssg"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_27sdp"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_385sdp"
        android:layout_marginLeft="@dimen/_75sdp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#ffffff"
        android:hint="LRN"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="@color/color_border"
        android:textSize="@dimen/_11ssp" />

    <ImageView
        android:id="@+id/PasswordIcon_login_ssg"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_420sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:background="@drawable/password_signup" />

    <EditText
        android:id="@+id/Input_Password_login_ssg"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_27sdp"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_430sdp"
        android:layout_marginLeft="@dimen/_75sdp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#ffffff"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/_10sdp"
        android:textColorHint="@color/color_border"
        android:textSize="@dimen/_11ssp" />


    <ToggleButton
        android:id="@+id/showPasswordeye_ssg"
        style="@style/AppTheme.ToggleButton"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_428sdp"
        android:layout_marginLeft="@dimen/_235sdp"
        android:background="@drawable/eye_for_password"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/ForgotPassword_ssg"
        android:layout_width="@dimen/_145sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_460sdp"
        android:layout_marginLeft="@dimen/_65sdp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#00000000"
        android:text="Forgot Password?"
        android:textColor="#000000"
        android:textSize="@dimen/_13ssp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Login_Btn_ssg"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_515sdp"
        android:layout_marginLeft="@dimen/_100sdp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/poppins"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="20sp" />

</RelativeLayout>