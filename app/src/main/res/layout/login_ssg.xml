<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup">

    <ImageView
        android:id="@+id/LogoIcon_login_user"
        android:layout_width="108dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/school_logo" />

    <!-- Text View for "AcadBud" -->

    <ImageView
        android:id="@+id/group_login_ssg"
        android:layout_width="302dp"
        android:layout_height="223dp"
        android:layout_below="@+id/LogoIcon_login_user"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/group" />

    <TextView
        android:id="@+id/AcadBudTxtShadow_login_ssg"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/group_login_ssg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-62dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/gatwick"
        android:text="AcadBud"
        android:textColor="#000000"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/AcadBudTxt_login_ssg"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_below="@+id/group_login_ssg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-61dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/gatwick"
        android:text="AcadBud"
        android:textColor="#ffffff"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/Login_ssg_login"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:text="Login"
        android:fontFamily="@font/poppins"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:paddingLeft="25dp"
        android:layout_below="@+id/group_login_ssg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="103dp" />

    <ImageView
        android:id="@+id/ssg_icon_login"
        android:layout_width="67dp"
        android:layout_height="61dp"
        android:layout_below="@+id/Login_ssg_login"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ssg_position" />

    <EditText
        android:id="@+id/Input_ssg_login"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_below="@+id/Login_ssg_login"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="37dp"
        android:layout_toEndOf="@+id/ssg_icon_login"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#ffffff"
        android:hint="SSG Position"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/color_border"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/LrnIcon_login_ssg"
        android:layout_width="67dp"
        android:layout_height="61dp"
        android:layout_below="@+id/ssg_icon_login"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/lrn_signup" />

    <EditText
        android:id="@+id/Input_Lrn_login_ssg"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_below="@+id/Input_ssg_login"
        android:layout_alignEnd="@+id/Input_ssg_login"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/LrnIcon_login_ssg"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#ffffff"
        android:hint="LRN"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/color_border"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/PasswordIcon_login_ssg"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_below="@+id/LrnIcon_login_ssg"
        android:layout_alignStart="@+id/LrnIcon_login_ssg"
        android:layout_marginStart="3dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/password_signup" />

    <EditText
        android:id="@+id/Input_Password_login_ssg"
        android:layout_width="271dp"
        android:layout_height="37dp"
        android:layout_below="@+id/Input_Lrn_login_ssg"
        android:layout_alignStart="@+id/Input_Lrn_login_ssg"
        android:layout_alignEnd="@+id/Input_Lrn_login_ssg"
        android:layout_marginStart="1dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#ffffff"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/color_border"
        android:textSize="14sp" />

    <ToggleButton
        android:id="@+id/showPasswordeye_ssg"
        style="@style/AppTheme.ToggleButton"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/Input_Password_login_ssg"
        android:layout_alignEnd="@+id/Input_Password_login_ssg"
        android:layout_alignBottom="@+id/Input_Password_login_ssg"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/eye_for_password"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/ForgotPassword_ssg"
        android:layout_width="167dp"
        android:layout_height="41dp"
        android:layout_below="@+id/PasswordIcon_login_ssg"
        android:layout_alignStart="@+id/PasswordIcon_login_ssg"
        android:layout_alignEnd="@+id/Input_Password_login_ssg"
        android:layout_marginStart="80dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#00000000"
        android:text="Forgot Password?"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Login_Btn_ssg"
        android:layout_width="115dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/poppins"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="20sp" />

</RelativeLayout>