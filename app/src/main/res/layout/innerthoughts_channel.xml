<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/AcadBud_inner_thooughts_channel"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/poppins"
        android:paddingLeft="13dp"
        android:text="Inner Thoughts"
        android:textColor="#E55604"
        android:textSize="@dimen/_30ssp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_innerthoughts"
        android:layout_width="match_parent"
        android:layout_height="624dp"
        android:layout_above="@+id/profile_btn_inner_thoughts"
        android:layout_below="@+id/AcadBud_inner_thooughts_channel"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp" />

    <Button
        android:id="@+id/inner_thoughts_channel_post_btn"
        android:layout_width="76dp"
        android:layout_height="80dp"
        android:layout_above="@+id/profile_btn_inner_thoughts"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/post_btn" />

    <View
        android:id="@+id/inner_thoughts_vw"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:background="#DBDEE3"/>

    <Button
        android:id="@+id/home_btn_inner_thoughts"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/inner_thoughts_vw"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/home_button" />

    <Button
        android:id="@+id/meeting_btn_inner_thoughts"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/home_btn_inner_thoughts"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/home_btn_inner_thoughts"
        android:background="@drawable/meeting_button" />

    <Button
        android:id="@+id/notif_btn_inner_thoughts"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/meeting_btn_inner_thoughts"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/meeting_btn_inner_thoughts"
        android:background="@drawable/notification_button" />

    <Button
        android:id="@+id/profile_btn_inner_thoughts"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/notif_btn_inner_thoughts"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/notif_btn_inner_thoughts"
        android:background="@drawable/profile_button" />


</RelativeLayout>