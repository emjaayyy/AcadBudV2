<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup">


    <ImageView
        android:id="@+id/LogoIcon_signup_user"
        android:layout_width="108dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/school_logo" />

    <!-- Text View for "AcadBud" -->

    <ImageView
        android:id="@+id/group_user"
        android:layout_width="302dp"
        android:layout_height="223dp"
        android:layout_below="@+id/LogoIcon_signup_user"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="49dp"
        android:background="@drawable/group" />

    <TextView
        android:id="@+id/AcadBudTxtShadow_signup_user"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/group_user"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-62dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/gatwick"
        android:text="AcadBud"
        android:textColor="#000000"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/AcadBudTxt_signup_user"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_below="@+id/group_user"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-61dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/gatwick"
        android:text="AcadBud"
        android:textColor="#ffffff"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/Already_registered_signup_user"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/AcadBudTxtShadow_signup_user"
        android:layout_alignEnd="@+id/AcadBudTxtShadow_signup_user"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="85dp"
        android:fontFamily="@font/font"
        android:text="Already registered?"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/Login_Btn_signup_user"
        android:layout_width="103dp"
        android:layout_height="66dp"
        android:layout_above="@+id/Input_Lrn_signup_user"
        android:layout_below="@+id/group_user"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/poppins"
        android:paddingTop="0dp"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/LrnIcon_signup_user"
        android:layout_width="67dp"
        android:layout_height="61dp"
        android:layout_below="@+id/Already_registered_signup_user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/lrn_signup" />

    <EditText
        android:id="@+id/Input_Lrn_signup_user"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_below="@+id/Already_registered_signup_user"
        android:layout_marginStart="18dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="-1dp"
        android:layout_toEndOf="@+id/NameIcon_signup_user"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#ffffff"
        android:hint="LRN"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/color_border"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/NameIcon_signup_user"
        android:layout_width="61dp"
        android:layout_height="57dp"
        android:layout_below="@+id/LrnIcon_signup_user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/fullname_signup" />

    <EditText
        android:id="@+id/Input_Name_user"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_below="@+id/Input_Lrn_signup_user"
        android:layout_alignStart="@+id/Input_Lrn_signup_user"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#ffffff"
        android:hint="Full name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/color_border"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/EmailAddressIcon_user"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_below="@+id/NameIcon_signup_user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/email_signup" />

    <EditText
        android:id="@+id/Input_Email_user"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_below="@+id/Input_Name_user"
        android:layout_alignStart="@+id/Input_Name_user"
        android:layout_alignEnd="@+id/Input_Name_user"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#ffffff"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/color_border"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/PasswordIcon_signup_user"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_below="@+id/EmailAddressIcon_user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/password_signup" />

    <EditText
        android:id="@+id/Input_Password_signup_user"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_below="@+id/Input_Email_user"
        android:layout_alignStart="@+id/Input_Email_user"
        android:layout_alignEnd="@+id/Input_Email_user"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#ffffff"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/color_border"
        android:textSize="14sp" />

    <Button
        android:id="@+id/Signupbttn_user"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="41dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/poppins"
        android:text="Sign Up"
        android:textColor="#000000" />

</RelativeLayout>