<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="#ffffff">


    <TextView
        android:id="@+id/divider_post_adapter_1"
        android:layout_width="395dp"
        android:layout_height="2dp"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_alignEnd="@+id/content_vw_math"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#D9D9D9"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="20dp" />

    <View
        android:id="@+id/content_vw_math"
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        android:layout_alignTop="@+id/dateTextView"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#ffffff" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_post_adapter_1"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:fontFamily="@font/poppins"
        android:paddingLeft="5dp"
        android:paddingRight="35dp"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nameTextView"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/nameTextView"
        android:textColor="#000000"
        android:textSize="18dp" />

    <Button
        android:id="@+id/postAddBtn"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:layout_below="@+id/delete_btn_post_adapter"
        android:layout_alignEnd="@+id/content_vw_math"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#FF3131"
        android:fontFamily="@font/poppins"
        android:text="ADD" />

    <Button
        android:id="@+id/edit_btn_post_adapter"
        android:layout_width="31dp"
        android:layout_height="26dp"
        android:layout_alignTop="@+id/dateTextView"
        android:layout_alignEnd="@+id/content_vw_math"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/edit_btn" />

    <Button
        android:id="@+id/delete_btn_post_adapter"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_below="@+id/edit_btn_post_adapter"
        android:layout_alignStart="@+id/edit_btn_post_adapter"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/delete_btn" />

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="321dp"
        android:layout_height="110dp"
        android:layout_below="@+id/dateTextView"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_alignBottom="@+id/content_vw_math"
        android:layout_marginStart="4dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="38dp"
        android:layout_toStartOf="@+id/postAddBtn"
        android:hint="Type your concern ..."
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/divider_post_adapter_2"
        android:layout_width="395dp"
        android:layout_height="2dp"
        android:layout_below="@+id/content_vw_math"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_alignEnd="@+id/content_vw_math"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:background="#D9D9D9"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="20dp" />

</RelativeLayout>
