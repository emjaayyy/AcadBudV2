<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <View
        android:id="@+id/content_vw_math"
        android:layout_width="378dp"
        android:layout_height="172dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_alignTop="@+id/content_vw_math"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:paddingRight="35dp"
        android:background="#ffffff"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:textSize="18dp"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/content_vw_math"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/nameTextView"
        android:textColor="#000000"
        android:textSize="18dp" />

    <Button
        android:id="@+id/postAddBtn"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dateTextView"
        android:layout_alignEnd="@+id/content_vw_math"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#FF3131"
        android:fontFamily="@font/poppins"
        android:text="ADD" />

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="270dp"
        android:layout_height="129dp"
        android:layout_alignTop="@+id/content_vw_math"
        android:layout_alignBottom="@+id/content_vw_math"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="1dp"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="15dp" />

</RelativeLayout>
