<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:background="#ffffff">


    <TextView
        android:id="@+id/divider_post_adapter_1"
        android:layout_width="395dp"
        android:layout_height="2dp"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_alignEnd="@+id/content_vw_math"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#D9D9D9"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="20dp" />

    <View
        android:id="@+id/content_vw_math"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_alignTop="@+id/dateTextView"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#ffffff" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_post_adapter_1"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:fontFamily="@font/poppins"
        android:paddingLeft="5dp"
        android:paddingRight="35dp"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nameTextView"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/nameTextView"
        android:textColor="#000000"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTextView"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_marginStart="4dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="0dp"
        android:hint="Type your concern ..."
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/divider_post_adapter_2"
        android:layout_width="395dp"
        android:layout_height="2dp"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_alignEnd="@+id/content_vw_math"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="0dp"
        android:background="#D9D9D9"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="20dp" />
</RelativeLayout>
