<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <View
        android:id="@+id/content_vw_math"
        android:layout_width="378dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle" />

    <TextView
        android:id="@+id/postUserName"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/content_vw_math"
        android:layout_alignTop="@+id/content_vw_math"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/postDate"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/content_vw_math"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/postUserName"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:textSize="18dp" />

    <Button
        android:id="@+id/postAddBtn"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/postDate"
        android:layout_alignEnd="@+id/content_vw_math"
        android:layout_alignBottom="@+id/content_vw_math"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="#FF3131"
        android:fontFamily="@font/poppins"
        android:text="ADD" />

    <TextView
        android:id="@+id/postContent"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/postUserName"
        android:layout_alignTop="@+id/content_vw_math"
        android:layout_alignEnd="@+id/postDate"
        android:layout_alignBottom="@+id/content_vw_math"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="9dp"
        android:textColor="#000000"
        android:textSize="15dp" />

    <View
        android:id="@+id/postDivider"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"/>
</RelativeLayout>
