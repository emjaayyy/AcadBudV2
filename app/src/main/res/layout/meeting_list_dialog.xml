<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Meeting_tv_ssg"
        android:layout_width="325dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/poppins"
        android:paddingLeft="13dp"
        android:text="List of Meetings"
        android:textColor="#004AAD"
        android:textSize="35sp" />

    <Button
        android:id="@+id/create_meeting"
        android:layout_width="159dp"
        android:layout_height="42dp"
        android:layout_above="@+id/math_vw_2_ssg"
        android:layout_below="@+id/Meeting_tv_ssg"
        android:layout_alignStart="@+id/math_vw_1_ssg"
        android:layout_alignEnd="@+id/Meeting_tv_ssg"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#D9D9D9"
        android:text="Create Meeting"
        android:textColor="#000000" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/meetingListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
